        "advanced": {
          "protein": "0.6g/kg",
          "strict": "All minerals restricted"
        },
        "dialysis": {
          "protein": "1.2-1.3g/kg",
          "fluid": "Restricted based on output"
        }
      },
      "restrictions": {
        "potassium": {
          "limit": "2000-3000mg if elevated",
          "leaching": "Soak and boil vegetables"
        },
        "phosphorus": {
          "limit": "800-1000mg",
          "binders": "With meals as prescribed"
        },
        "sodium": {
          "limit": "2000mg",
          "avoid": "Processed foods"
        },
        "fluid": {
          "calculation": "Output + 500-750ml",
          "includes": "All liquids and foods that melt"
        }
