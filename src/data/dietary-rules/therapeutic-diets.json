      "foods": {
        "choose": [
          "lean meats",
          "skinless poultry",
          "fish",
          "low-fat dairy",
          "fruits",
          "vegetables",
          "whole grains",
          "legumes"
        ],
        "limit": [
          "fatty meats",
          "whole milk dairy",
          "egg yolks",
          "fried foods",
          "processed foods"
        ]
      }
    },
