{
  "version": "1.0.0",
  "category": "Medical and Therapeutic Dietary Protocols",
  "protocols": {
    "elimination": {
      "name": "Elimination Diet",
      "purpose": "Identify food sensitivities and intolerances",
      "phases": {
        "elimination": {
          "duration": "3-6 weeks",
          "remove": [
            "gluten",
            "dairy",
            "eggs",
            "soy",
            "corn",
            "peanuts",
            "tree nuts",
            "shellfish",
            "nightshades",
            "citrus",
            "alcohol",
            "caffeine",
            "processed foods",
            "added sugars"
          ],
          "allowed": [
            "most vegetables (non-nightshade)",
            "most fruits (non-citrus)",
            "lean meats",
            "fish (non-shellfish)",
            "rice",
            "sweet potatoes",
            "herbs and spices"
          ]
        },
        "reintroduction": {
          "method": "One food every 3-4 days",
          "monitor": "Symptoms for 72 hours",
          "order": "Least to most likely triggers",
          "documentation": "Detailed symptom journal"
        },
        "maintenance": {
          "avoid": "Identified trigger foods",
          "rotate": "Prevent new sensitivities",
          "reassess": "Periodically retry foods"
        }
      }
    },
    "lowFodmap": {
      "name": "Low FODMAP Protocol",
      "purpose": "Manage IBS and digestive symptoms",
      "phases": {
        "restriction": {
          "duration": "2-6 weeks",
          "strict": "All high FODMAP foods eliminated",
          "lowFodmap": {
            "proteins": ["meat", "fish", "eggs", "firm tofu"],
            "grains": ["rice", "quinoa", "oats", "sourdough spelt"],
            "vegetables": ["carrots", "cucumber", "lettuce", "tomatoes", "spinach", "zucchini"],
            "fruits": ["strawberries", "oranges", "grapes", "cantaloupe"],
            "dairy": ["lactose-free options", "hard cheeses"],
            "nuts": ["almonds (limited)", "walnuts", "peanuts"]
          }
        },
        "reintroduction": {
          "systematic": "Test each FODMAP group",
          "oligosaccharides": {
            "fructans": ["wheat", "onions", "garlic"],
            "gos": ["legumes", "cashews"]
          },
          "disaccharides": ["milk", "yogurt", "soft cheese"],
          "monosaccharides": ["apples", "pears", "honey"],
          "polyols": {
            "sorbitol": ["stone fruits", "avocados"],
            "mannitol": ["mushrooms", "cauliflower"]
          }
        },
        "personalization": {
          "tolerance": "Individual thresholds vary",
          "combinations": "Some foods tolerated alone but not together"
        }
      }
    },
    "dash": {
      "name": "DASH Diet",
      "purpose": "Lower blood pressure and improve heart health",
      "dailyServings": {
