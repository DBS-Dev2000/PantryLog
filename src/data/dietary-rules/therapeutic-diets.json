    "tlc": {
      "name": "Therapeutic Lifestyle Changes",
      "purpose": "Lower cholesterol levels",
      "targets": {
        "saturatedFat": "<7% of calories",
        "cholesterol": "<200mg/day",
        "totalFat": "25-35% of calories",
        "sodium": "<2300mg/day",
        "fiber": "20-30g/day",
        "plantSterols": "2g/day optional"
